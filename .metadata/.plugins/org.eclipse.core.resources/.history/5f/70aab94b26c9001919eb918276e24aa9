package ex7_1;

public class Mocha extends SizeDec {
	
	Beverage bev;
	public Mocha(Beverage bev) {
		this.bev=bev;
		this.bev.setSize(bev.getSize());
	}
	
	public String getDesc() {
		return bev.getDesc() + ", Mocha"; 
	}

	public double cost() {
		switch(bev.size) {
		case "Sm": 
		return .15+bev.cost();
		case "Md":
			return .20+bev.cost();
		case "Lg":
			return .25+bev.cost();
		default:
			return bev.cost();		
	}
	
}
	
}
