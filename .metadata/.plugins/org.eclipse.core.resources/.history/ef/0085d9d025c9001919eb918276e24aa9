package ex7_1;

public class Whip extends SizeDec {

	Beverage bev;

	public Whip(Beverage bev) {
		this.bev = bev;
	}

	public String getDesc() {
		return bev.getDesc() + ", Whip";
	}

	public double cost() {
		switch (bev.size) {
		case "Sm":
			return .05 + bev.cost();
		case "Md":
			return .10 + bev.cost();
		case "Lg":
			return .15 + bev.cost();
		default:
			bev.setSize("Md");
			return bev.cost();
		}

	}
	public abstract void setSize()
}
