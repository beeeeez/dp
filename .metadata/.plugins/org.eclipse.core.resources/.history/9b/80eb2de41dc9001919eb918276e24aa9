package ex7_1;

public class SteamedMilk extends CondDec {
	
	Beverage bev;
	public SteamedMilk(Beverage bev) {
		this.bev=bev;		
	}
	
	public String getDesc() {
		return bev.getDesc() + ", SteamedMilk"; 
	}

	public double cost() {
		switch(bev.size) {
		case "Sm": 
		return .10+bev.cost();
		case "Md":
			return .10+bev.cost();
		case "Lg":
			return .50+bev.cost();
		default:
			return bev.cost();
		
		}
		
	}
	
}
