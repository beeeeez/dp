package ex7_1;

import java.text.NumberFormat;

public class StarbuttCoffee {

	public static void main(String[] args) {
		Beverage bev = new Espresso();
	    NumberFormat nf = NumberFormat.getCurrencyInstance();
		String size = "Sm";
	    bev=new SteamedMilk(bev, size);
		bev=new Soy(bev, size);
		bev=new Mocha(bev, size);
		System.out.println(bev.getSize() + " " +bev.getDesc() + " " +nf.format(bev.cost()));
		
		size = "Lg";
		Beverage bev2=new DarkRoast();		
		bev2=new Mocha(bev2, size);
		bev2=new Mocha(bev2, size);
		bev2=new Whip(bev2, size);
		System.out.println(bev2.getSize() + " " +bev2.getDesc() + " " +nf.format(bev2.cost()));
		
		size = "Md";
		Beverage bev3 = new HouseBlend();		
		bev3=new Soy(bev3, size);
		bev3=new Mocha(bev3, size);
		bev3=new Whip(bev3, size);
		System.out.println(bev3.getSize() + " " +bev3.getDesc() + " " +nf.format(bev3.cost()));
		
		
	
		
	}
}
