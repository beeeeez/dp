package ex7_1;

public class StarbuttCoffee {

	public static void main(String[] args) {
		Beverage bev = new Espresso();
		System.out.println(bev.getDesc() + "$" +bev.cost());
		
		Beverage bev2=new DarkRoast();
		bev2.setSize("Md");
		bev2=new Mocha(bev2);
		bev2=new Mocha(bev2);
		bev2=new Whip(bev2);
		
		System.out.println(bev2.getDesc() + "$" +bev2.cost());
		
		
		Beverage bev3 = new HouseBlend();
		bev3.setSize("Sm");
		bev3=new Soy(bev3);
		bev3=new Mocha(bev3);
		bev3=new Whip(bev3);
		System.out.println(bev3.getDesc() + "$" +bev3.cost());
		
		
	
		
	}
}
