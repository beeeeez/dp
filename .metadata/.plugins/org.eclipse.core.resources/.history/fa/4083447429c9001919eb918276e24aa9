package ex7_1;

public class Mocha extends SizeDec {

	Beverage bev;
	String size;

	public Mocha(Beverage bev, String size) {
		this.bev = bev;
		this.size = size;
	}

	public String getDesc() {
		return bev.getDesc() + ", Mocha";
	}

	public double cost() {
		switch (size) {
		case "Sm":
			return .15 + bev.cost();
		case "Md":
			return .20 + bev.cost();
		case "Lg":
			return .25 + bev.cost();
		default:
			setSize("Md");
			return bev.cost();
		}

	}

	public void setSize(String sz) {
		size = sz;
	}

	public String getSize() {
		return size;
	}

}
