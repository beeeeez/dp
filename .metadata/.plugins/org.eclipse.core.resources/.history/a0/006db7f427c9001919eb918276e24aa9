package ex7_1;

public class SteamedMilk extends SizeDec {

	Beverage bev;
	String size;

	public SteamedMilk(Beverage bev) {
		this.bev = bev;
	}

	public String getDesc() {
		return bev.getDesc() + ", SteamedMilk";
	}

	public double cost() {
		switch (size) {
		case "Sm":
			return .05 + bev.cost();
		case "Md":
			return .10 + bev.cost();
		case "Lg":
			return .15 + bev.cost();
		default:
			setSize("Md");
			return bev.cost();
		}
	}

	public void setSize(String sz) {
		size = sz;
	}

	public String getSize() {
		return size;
	}

}
