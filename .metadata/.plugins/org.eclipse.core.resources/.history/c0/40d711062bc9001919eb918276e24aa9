package ex7_1;

public class Whip extends SizeDec {

	Beverage bev;
	String size;

	public Whip(Beverage bev, String size) {
		this.bev = bev;
		this.size = size;
	}

	public String getDesc() {
		return bev.getDesc() + ", Whip";
	}

	public double cost() {
		switch (bev.getSize()) {
		case "Sm":
			return .05 + bev.cost();
		case "Md":
			return .10 + bev.cost();
		case "Lg":
			return .15 + bev.cost();
		default:
			setSize("Md");
			return .10 + bev.cost();
		}

	}

	public void setSize(String sz) {
		size = sz;
	}

	public String getSize() {
		return size;
	}
}
